{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.js", "**/*.js"],
  "exclude": ["node_modules"]
}
